<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/check_sign_numerable_check_box_single_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_done_white_18dp"
            android:scaleType="centerInside"
            android:layout_margin="8dp"
            android:contentDescription="@string/universal_image_content_description"
            />

        <TextView
            android:id="@+id/check_position_numerable_check_box_single_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />
</LinearLayout>