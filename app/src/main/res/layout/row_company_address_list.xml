<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/choose_button_address_single_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_baby_blue_shape"
        android:src="@drawable/ic_icon_map"
        android:scaleType="centerInside"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/universal_image_content_description"
        />

    <TextView
        android:id="@+id/geocoder_textview_address_single_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/choose_button_address_single_view"
        android:layout_toEndOf="@+id/choose_button_address_single_view"
        android:layout_toStartOf="@+id/delete_item"
        android:layout_toLeftOf="@+id/delete_item"
        android:layout_centerVertical="true"
        tools:text="Alex"
        />

    <ImageView
        android:id="@+id/delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        />
</RelativeLayout>