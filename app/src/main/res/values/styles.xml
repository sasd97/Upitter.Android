<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayout.Upitter.White" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance.Upitter.White</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabTextAppearance.Upitter.White" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TabLayout.Upitter.Blue" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance.Upitter.White</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="TabTextAppearance.Upitter.Blue" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
