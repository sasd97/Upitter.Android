<resources>

    <!-- Base application region. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Endregion -->

    <!-- Tablayout style region. -->
    <style name="TabLayout.Upitter.White" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance.Upitter.White</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabTextAppearance.Upitter.White" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Endregion -->

    <!-- Rounded button region -->
    <style name="Upitter.Button.Rounded" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/rounded_button_height</item>
        <item name="android:textSize">@dimen/rounded_button_text_size</item>
    </style>

    <style name="Upitter.Button.Rounded.Watermelon" parent="@style/Upitter.Button.Rounded">
        <item name="android:background">@drawable/rounded_button_watermelon</item>
        <item name="android:textColor">@color/rounded_button_watermelon_text_selector</item>
    </style>

    <style name="Upitter.Button.Rounded.Twitter" parent="@style/Upitter.Button.Rounded">
        <item name="android:background">@drawable/rounded_button_shape_twitter_blue</item>
        <item name="android:textColor">@color/rounded_button_watermelon_text_selector</item>
    </style>

    <style name="Upitter.Button.Rounded.Facebook" parent="@style/Upitter.Button.Rounded">
        <item name="android:background">@drawable/rounded_button_shape_facebook_blue</item>
        <item name="android:textColor">@color/rounded_button_watermelon_text_selector</item>
    </style>

    <style name="Upitter.Button.Rounded.Google" parent="@style/Upitter.Button.Rounded">
        <item name="android:background">@drawable/rounded_button_shape_google_red</item>
        <item name="android:textColor">@color/rounded_button_watermelon_text_selector</item>
    </style>

    <style name="Upitter.Button.Rounded.White" parent="@style/Upitter.Button.Rounded">
        <item name="android:background">@drawable/rounded_button_shape_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Upitter.Button.Rounded.BabyBlue.Light" parent="@style/Upitter.Button.Rounded">
        <item name="android:background">@drawable/rounded_button_shape_baby_blue_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!-- Endregion -->

    <!-- Layout buttons region -->
    <style name="Upitter.LayoutButton.Rounded" parent="@style/AppTheme">
        <item name="android:layout_height">@dimen/rounded_button_height</item>
        <item name="android:textSize">@dimen/rounded_button_text_size</item>
    </style>

    <style name="Upitter.LayoutButton.Rounded.BabyBlue.Light" parent="@style/Upitter.LayoutButton.Rounded">
        <item name="android:background">@drawable/rounded_button_shape_baby_blue_light</item>
    </style>
    <!-- Endregion -->

    <!-- EditText region -->
    <style name="Upitter.EditText.BabyBlue.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorStartBackground</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Endregion -->
</resources>
